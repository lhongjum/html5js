.app-list {
  padding: 20px;
}

.app-item {
  border-bottom: 1px solid #ccc;
  padding: 10px 0;
  display: flex;
}

.list-item image {
  width: 100px;
  height: 100px;
}

.list-content {
  flex: 1;
  padding-left: 12px;
}

.list-seller {
  color: #999;
  font-size: 12px;
  padding: 3px 0 0;
}

.list-sales {
  font-size: 12px;
  color: #999;
  padding: 3px 0;
}

.list-price {
  font-size: 12px;
}

.list-price-num {
  font-size: 16px;
  color: #f30;
  margin-right: 8px;
}

.list-origin {
  color: #999;
  text-decoration: line-through;
}

.list-buy {
  height: 24px;
  line-height: 24px;
  display: inline-block;
  padding: 0 15px;
  color: #fff;
  background: #f30;
  border-radius: 12px;
  font-size: 12px;
}
