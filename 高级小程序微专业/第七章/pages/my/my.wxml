<view class='mine'>
  <view class='user'>
    <open-data class='img' type='userAvatarUrl'></open-data>
    <open-data class='name' type='userNickName'></open-data>
  </view>
  <!-- 按扭模块 -->
  <view class='list'>
    <view class='item' wx:for='{{list}}' wx:key='this' bindtap='{{item.callback}}'>
    <image src='{{item.img}}'></image>
    <text>{{item.title}}</text>
    </view>
  </view>
</view>

<!-- 客服会话按扭 -->
<button open-type='contact' class='icons-contact'><text></text></button>