.coupon-card {
  width: 100%;
  height: 216rpx;
  background:#fff;
  display:flex;
  align-items: center;
  margin: 20px 0;
}
.coupon-card .info {
  flex: 1;
  text-align: center;
  color: #74d2d4;
  font-size: 36px;
  font-weight: bold;
}
.coupon-card .info text {
  font-size: 18px;
}
.coupon-card .bg {
  width: 72rpx;
  height: 216rpx;
  background-image: url(https://localhost:3001/static/images/bg/coupon_card_bg.jpg);
  background-repeat: no-repeat;
}
/* 选中的优惠券，字体变红 */
.choose .info{
  color: #ff0000;
}